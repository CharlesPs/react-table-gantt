{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "jsx": "react",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "lib"
  ],
}
  